  if start:
    if l[:2]=='%%': start=0
    else:
      out = ""
      for ch in l:
        if ch == '{': count+=1
        elif ch == '}': count-=1
        elif count == 0: out += ch
      out = string.strip(out)
      if out: 
        if out[0]=='|': 
