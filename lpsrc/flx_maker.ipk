      filecopy("src"+os.sep+f+".mli","src"+os.sep+f+".ml")

def copy_elk2rtl():
  for f in ELKRTL_INTERFACES:
    if filetime("elk"+os.sep+f) > filetime("rtl"+os.sep+f):
      filecopy("elk"+os.sep+f,"rtl"+os.sep+f)

