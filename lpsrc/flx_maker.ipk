@head(1,'configure')
A shell script to run the config step.
@select(tangler('configure'))
echo "Configuring Felix"
grab=1

PREFIX=$PREFIX
while (( "$grab" == "1" ));
do
  case x$1 in
  x--prefix=*)
     PREFIX="`echo \"$1\" | sed 's/--prefix=\(.*\)/\\1/'`"
     shift
  ;;

  x--prefix)
    shift
    PREFIX="$1"
    shift
  ;;

  x) 
    grab=0
  ;;
  esac
done

echo "Installing at PREFIX=$PREFIX"
make PREFIX=$PREFIX config
make PREFIX=$PREFIX boot
make grammar
make extract

