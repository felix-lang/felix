if os.name=="nt":
  ENV="set PATH=bin;%PATH%&&"
else:
  if CYGWIN or WIN32:
    ENV = 'env PATH=bin:"$PATH" PYTHONPATH=.:"$PYTHONPATH" '
  elif MACOSX:
    ENV = 'PATH=bin:"$PATH" DYLD_LIBRARY_PATH=rtl:"$DYLD_LIBRARY_PATH" '
