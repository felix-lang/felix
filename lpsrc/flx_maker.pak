# convert a binary file to hex
import sys
fn = sys.argv[1]
f = open(fn)
data = f.read()
f.close()
counter = 0
for ch in data:
  print("%02x" % ord(ch), end='')
  counter = counter + 1
  if counter == 8:
    print()
    counter = 0
print()

