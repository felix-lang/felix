
@h1 polyarray_02.flx
@felix
fun ==: 3 * 3 -> bool = "$1==$2";
fun ==: 4 * 4 -> bool = "$1==$2";
fun ==: 5 * 5 -> bool = "$1==$2";

var i : 3 = case 1 of 3;
var j : 4 = case 2 of 4;
var k : 5 = case 3 of 5;
var ijk : 3 * 4 * 5 = i,j,k; 
  // encoding: 20i + 5j + k
  // 20 * 1 + 5 * 2 + 3 = 33

fun str (x:3*4*5) => (x :>> int) . str;
fun str (x:3) => (x :>> int) . str;
fun str (x:4) => (x :>> int) . str;
fun str (x:5) => (x :>> int) . str;

println$ "ijk=" + str ijk;
println$ ijk . 0 .str;
println$ ijk . 1 .str;
println$ ijk . 2 .str;

assert ijk . 0 == i;
assert ijk . 1 == j;
assert ijk . 2 == k;

assert ijk . 0 :>> int == 1;
assert ijk . 1 :>> int == 2;
assert ijk . 2 :>> int == 3;

// Encoding test
println$ "Encoding test";
for var ii in 0 upto 2 do
  i = ii :>> 3;
  for var jj in 0 upto 3 do
    j = jj :>> 4;
    for var kk in 0 upto 4 do
      k = kk :>> 5;
      ijk = i,j,k;
      println$ ijk.0.str + "," + ijk.1.str + "," + ijk.2.str+" encoding=" + (ijk :>>int) .str;
      assert 20 * (i:>>int) + 5 * (j:>>int) + (k:>>int) == ijk :>>int;
    done
  done
done

println$ str ijk;
&ijk.1 <- case 2 of 4;
println$ str ijk;

println$ "Decoding test";
// Decoding test
for var v in 0 upto 59 do
  ijk = v :>> (3 * 4 * 5);
  println$ ijk.0.str + "," + ijk.1.str + "," + ijk.2.str+" encoding=" + (ijk :>>int) .str;
  assert 20 * (ijk.0 :>>int)+ 5 * (ijk.1:>>int)+ (ijk.2 :>>int) == ijk :>>int;
done

// Assignment test
println$ "Assignment test";
for ii in 0 upto 2 do
  i = ii :>> 3;
  for jj in 0 upto 3 do
    j = jj :>> 4;
    for kk in 0 upto 4 do
      k = kk :>> 5;
      &ijk.0 <- i;
      &ijk.1 <- j;
      &ijk.2 <- k;
      println$ ijk.0.str + "," + ijk.1.str + "," + ijk.2.str+" encoding=" + (ijk :>>int) .str;
      assert 20 * (i:>>int) + 5 * (j:>>int) + (k:>>int) == ijk :>>int;
    done
  done
done

 

